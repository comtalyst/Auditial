<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="1"
        android:background="#bcccd2">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/skyd"
        android:weightSum="1"
        android:layout_weight="0">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top|right"
                android:layout_weight="10" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button_settings"
                android:background="@drawable/settings_icon"
                android:onClick="SettingsClick" />
        </LinearLayout>

        <TextView
            android:text="Current Balance :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_head"
            android:textColor="@drawable/font_head"
            android:textAlignment="center"
            android:textSize="27dip"
            android:layout_marginTop="14dp" />

        <TextView
            android:text="9,999,999.99"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_balance"
            android:textColor="@drawable/font_head"
            android:textAlignment="center"
            android:textSize="48dip"
            android:layout_marginTop="25dp" />
    </LinearLayout>

            <Button
                android:text="Records"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button_details"
                android:onClick="DetailsClick"
                android:backgroundTint="@color/bg_mbutton"
                android:textColor="@color/textcolor_btn1"
                android:textAllCaps="false"
                android:textSize="22dp"
                android:layout_weight="0"
                android:layout_margin="20dp" />

            <Button
                android:text="Increase"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button_add"
                android:onClick="AddClick"
                android:backgroundTint="#5baa5b"
                android:textColor="@color/textcolor_btn1"
                android:textAllCaps="false"
                android:textSize="22dp"
                android:layout_weight="0"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-15dp" />

            <Button
                android:text="Decrease"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button_del"
                android:onClick="DelClick"
                android:backgroundTint="#ff5555"
                android:textColor="@color/textcolor_btn1"
                android:textAllCaps="false"
                android:textSize="22dp"
                android:layout_weight="0"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-15dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
